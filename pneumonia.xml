<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>Pneumonia Report</h:title>
		<model>
<!-- instance gets filled out and submitted when you complete the form -->
			<instance>
				<pneumonia_patient>
					<department_hospital/>
					<reporting_date/>
					<first_name/>
					<last_name/>
					<sex/>
					<age/>
					<occupation/>
					<nationality/>
					<race/>
					<address/>
					<house_number/>
					<village_number/>
					<village_name/>
					<soi/>
					<road/>
					<subdistrict/>
					<district/>
					<province/>
					<home_phone/>
					<work_phone/>
					<cell_phone/>
					<hospital/>
					<province/>
					<date_symptoms/>
					<date_hospital/>
					<highest_temperature/>
					<exhibiting_symptoms/>
					<exhibiting_symptoms_other/>
					<lung_xray_status/>
					<lung_xray_date/>
					<lung_xray_reason/>
					<patient_type/>
					<patient_type_date/>
					<initial_diagnosis/>
					<contact_history/>
					<reporter_name/>
					<reporter_hospital/>
					<reporter_phone/>
				</pneumonia_patient>
			</instance>
			<bind nodeset="age" type="int" constraint=". &gt;= 0  and . &lt;= 110" jr:constraintMsg="ages must range between 0 and 110 years"/>
			<bind nodeset="reporting_date" type="date" constraint=". &lt;= today()" jr:constraintMsg="no future dates allowed"/>
			<bind nodeset="house_number" type="decimal"/>
			<bind nodeset="village_number" type="decimal"/>
			<bind nodeset="home_phone" type="string"/>
			<bind nodeset="work_phone" type="string"/>
			<bind nodeset="cell_phone" type="string"/>
			<bind nodeset="date_symptoms" type="date" constraint=". &lt;= today()" jr:constraintMsg="no future dates allowed"/>
			<bind nodeset="date_hospital" type="date" constraint=". &lt;= today()" jr:constraintMsg="no future dates allowed"/>
			<bind nodeset="highest_temperature" type="decimal" constraint=". &gt;= 85.0  and . &lt;= 112.0" jr:constraintMsg="temperatures must range between 85.0 and 112.0 degrees"/>
			<bind nodeset="reporter_phone" type="string"/>
			<bind nodeset="exhibiting_symptoms_other" type="string" relevant="selected(../exhibiting_symptoms, 'other')"/>
			<bind nodeset="lung_xray_date" type="date" constraint=". &lt;= today()" jr:constraintMsg="no future dates allowed" relevant="selected(../lung_xray_status, 'y')"/>
			<bind nodeset="lung_xray_reason" type="string" relevant="selected(../lung_xray_status, 'y')"/>
			<bind nodeset="patient_type_date" type="date" constraint=". &lt;= today()" jr:constraintMsg="no future dates allowed"/>
		</model>
	</h:head>
	<h:body>
<!-- text of the question definitions -->
		<group>
			<label>Report Information</label>
			<input ref="department_hospital">
				<label>Department/Hospital</label>
			</input>
			<input ref="reporting_date">
				<label>Date</label>
			</input>
		</group>
		<group>
			<label>Patient Basics</label>
			<input ref="first_name">
				<label>First Name</label>
			</input>
			<input ref="last_name">
				<label>Last Name</label>
			</input>
			<select1 ref="sex">
				<label>Sex</label>
				<item>
					<label>Male</label>
					<value>m</value>
				</item>
				<item>
					<label>Female</label>
					<value>f</value>
				</item>
			</select1>
			<input ref="age">
				<label>Age</label>
				<hint>Enter age in years</hint>
			</input>
			<input ref="occupation">
				<label>Occupation</label>
			</input>
			<input ref="nationality">
				<label>Nationality</label>
			</input>
			<input ref="race">
				<label>Race</label>
			</input>
		</group>
		<group>
			<label>Patient Address</label>
			<select1 ref="address">
				<label>Address</label>
				<hint>Choose a contactable address in Thailand</hint>
				<item>
					<label>Home</label>
					<value>home</value>
				</item>
				<item>
					<label>Other</label>
					<value>other</value>
				</item>
			</select1>
			<input ref="house_number">
				<label>House Number</label>
			</input>
			<input ref="village_number">
				<label>Village Number</label>
			</input>
			<input ref="village_name">
				<label>Village Name</label>
			</input>
			<input ref="soi">
				<label>Soi</label>
			</input>
			<input ref="road">
				<label>Road</label>
			</input>
			<input ref="subdistrict">
				<label>Sub District</label>
			</input>
			<input ref="district">
				<label>District</label>
			</input>
			<input ref="province">
				<label>Province</label>
			</input>
			<input ref="home_phone">
				<label>Home Phone</label>
			</input>
			<input ref="work_phone">
				<label>Work Phone</label>
			</input>
			<input ref="cell_phone">
				<label>Cell Phone</label>
			</input>
			<input ref="hospital">
				<label>Hospital</label>
			</input>
			<input ref="province">
				<label>Province</label>
			</input>
		</group>
		<group>
			<label>Initial Information</label>
			<input ref="date_symptoms">
				<label>Date when the patient started to get sick</label>
			</input>
			<input ref="date_hospital">
				<label>Date when the patient came to see the doctor</label>
			</input>
			<input ref="highest_temperature">
				<label>Highest measured temperature</label>
				<hint>Please enter in degrees</hint>
			</input>
			<select ref="exhibiting_symptoms">
				<label>Exhibiting Symptoms</label>
				<item>
					<label>Coughing</label>
					<value>pneumonia</value>
				</item>
				<item>
					<label>Difficulty breathing</label>
					<value>viral_pneumonia</value>
				</item>
				<item>
					<label>Asthma</label>
					<value>influenza</value>
				</item>
				<item>
					<label>Running nose</label>
					<value>respiratory_death</value>
				</item>
				<item>
					<label>Sputum Production</label>
					<value>sputum_production</value>
				</item>
				<item>
					<label>Other</label>
					<value>other</value>
				</item>
			</select>
			<input ref="exhibiting_symptoms_other">
				<label>Other Symptoms</label>
				<hint>Describe the other symptoms</hint>
			</input>
			<group>
				<label>Lung X-Ray</label>
				<select1 ref="lung_xray_status">
					<label>Valid Lung X-Ray</label>
					<item>
						<label>Yes</label>
						<value>y</value>
					</item>
					<item>
						<label>No</label>
						<value>n</value>
					</item>
				</select1>
				<input ref="lung_xray_date">
					<label>Date</label>
				</input>
				<input ref="lung_xray_reason">
					<label>Reason</label>
				</input>
			</group>
			<group>
				<label>Patient Type</label>
				<select1 ref="patient_type">
					<label>Patient Type</label>
					<item>
						<label>Out Patient (ODP)</label>
						<value>OPD</value>
					</item>
					<item>
						<label>In Patient (IDP)</label>
						<value>IPD</value>
					</item>
				</select1>
				<input ref="patient_type_date">
					<label>Date</label>
				</input>
			</group>
			<select ref="initial_diagnosis">
				<label>Initial Diagnosis</label>
				<item>
					<label>Pneumonia (risky background)</label>
					<value>pneumonia</value>
				</item>
				<item>
					<label>Viral pneumonia</label>
					<value>viral_pneumonia</value>
				</item>
				<item>
					<label>Influenza</label>
					<value>influenza</value>
				</item>
				<item>
					<label>Death from respiratory tract disease</label>
					<value>respiratory_death</value>
				</item>
			</select>
			<select ref="contact_history">
				<label>Contact History</label>
				<item>
					<label>Had direct contact to sick or newly dead animal.</label>
					<value>dead_animal_contact</value>
				</item>
				<item>
					<label>Lives in the area with too much dead poultry.</label>
					<value>dead_animal_area</value>
				</item>
			</select>
		</group>
		<group>
			<label>Reporter Information</label>
			<input ref="reporter_name">
				<label>Full Name</label>
			</input>
			<input ref="reporter_hospital">
				<label>Department/Hospital</label>
			</input>
			<input ref="reporter_phone">
				<label>Phone Number</label>
			</input>
		</group>
	</h:body>
</h:html>
