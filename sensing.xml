<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>Widgets Form</h:title>
		<model>
			<instance>
<!-- the XML inside here is what gets filled out and submitted when you complete the form -->
				<student>
					<start />
					<end />  
					<device />
					<location/>  
					<sex/>
					<picture/>
				</student>
			</instance>
			<bind id="start" nodeset="start" jr:preload="timestamp" jr:preloadParams="start" /> 
			<bind id="end" nodeset="end" jr:preload="timestamp" jr:preloadParams="end" /> 
			<bind id="device" nodeset="device" jr:preload="property" jr:preloadParams="deviceid" />
   			<bind nodeset="location" type="geopoint" />
			<bind nodeset="picture" type="xsd:anyURI"/>
		</model>
	</h:head>
	<h:body>    
		
		<select1 ref="sex">
			<label>Are you male or female?</label>
			<item>
				<label>Male</label>
				<value>m</value>
			</item>
			<item>
				<label>Female</label>
				<value>f</value>
			</item>
		</select1>
		<input ref="location">
			<label>Where are you?</label>
		</input>
		<upload ref="picture" mediatype="image/*">
			<label>Take a Picture:</label>
			<hint>This will take a picture.</hint>
			<filename ref="@filename"/>
			<mediatype ref="@mediatype"/>
		</upload>
	</h:body>
</h:html>
