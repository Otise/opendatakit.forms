<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
	<h:head>
		<h:title>Languages Form</h:title>
		<model>
			<itext>
				<translation lang="English">
					<text id="red">
						<value>Red</value>
					</text>
					<text id="green">
						<value>Green</value>
					</text>
					<text id="yellow">
						<value>Yellow</value>
					</text>
					<text id="favorite_color">
						<value>What is this person's favorite color?</value>
					</text>
				</translation>
				<translation lang="Spanish">
					<text id="red">
						<value>Rojo</value>
					</text>
					<text id="green">
						<value>Verde</value>
					</text>
					<text id="yellow">
						<value>Amarillo</value>
					</text>
					<text id="favorite_color">
						<value>&#xBF;Cual es el color favorito de esa persona?</value>
					</text>
				</translation>
				<translation lang="Swahili">
					<text id="red">
						<value>Nyekundu</value>
					</text>
					<text id="green">
						<value>Kijani</value>
					</text>
					<text id="yellow">
						<value>Njano</value>
					</text>
					<text id="favorite_color">
						<value>Huyu anapendelea rangi gani?</value>
					</text>
				</translation>
				<translation lang="French">
					<text id="red">
						<value>Rouge</value>
					</text>
					<text id="green">
						<value>Vert</value>
					</text>
					<text id="yellow">
						<value>Jaune</value>
					</text>
					<text id="favorite_color">
						<value>Quelle est la couleur pr&#xE9;f&#xE9;r&#xE9;e de cette personne?</value>
					</text>
				</translation>
			</itext>
			<instance>
				<languages>
					<favorite_color />
				</languages>
			</instance>
			<bind nodeset="favorite_color" type="string"/>
			</model>
	</h:head>
	<h:body>
		<select1 ref="favorite_color">
			<label ref="jr:itext('favorite_color')"/>
			<item>
				<label ref="jr:itext('red')"/>
				<value>red</value>
			</item>
			<item>
				<label ref="jr:itext('green')"/>
				<value>green</value>
			</item>
			<item>
				<label ref="jr:itext('yellow')"/>
				<value>yellow</value>
			</item>
		</select1>
	</h:body>
</h:html>
